.goods_detail_wrapper {
  padding-bottom: 90rpx;
  background-color: var(--BG);
}
.goods_detail_wrapper .preview {
  background: #fff;
}
.goods_detail_wrapper .preview .swiper_wrapper swiper {
  height: 400rpx;
}
.goods_detail_wrapper .preview .swiper_wrapper swiper swiper-item {
  text-align: center;
}
.goods_detail_wrapper .preview .swiper_wrapper swiper swiper-item image {
  width: 50%;
}
.goods_detail_wrapper .preview .goods_info .price {
  padding: 15rpx 0 10rpx 10rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.goods_detail_wrapper .preview .goods_info .goods_other_attr {
  display: flex;
  color: #7d7d7d;
}
.goods_detail_wrapper .preview .goods_info .goods_other_attr .goods_name {
  flex: 5;
  word-break: break-all;
  padding: 10rpx 20rpx 10rpx 10rpx;
  position: relative;
  font-size: 24rpx;
}
.goods_detail_wrapper .preview .goods_info .goods_other_attr .goods_name:after {
  content: "";
  width: 2rpx;
  height: 70%;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  background: #7d7d7d;
}
.goods_detail_wrapper .preview .goods_info .goods_other_attr .collection {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
}
.goods_detail_wrapper .preview .goods_info .goods_other_attr .collection text {
  font-size: 15px;
}
.goods_detail_wrapper .preview .goods_info .goods_other_attr .collection view {
  font-size: 18rpx;
  letter-spacing: 2px;
}
.goods_detail_wrapper .desc .detail_title {
  margin: 15rpx 0;
  padding: 15rpx;
  background: #fff;
  color: var(--themeColor);
  font-weight: 600;
}
.goods_detail_wrapper .bottom_nav_bar {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: #fff;
  border-top: 1rpx solid #ccc;
}
.goods_detail_wrapper .bottom_nav_bar .customer_service,
.goods_detail_wrapper .bottom_nav_bar .cart,
.goods_detail_wrapper .bottom_nav_bar .share {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 20rpx;
  color: #666;
  position: relative;
}
.goods_detail_wrapper .bottom_nav_bar .customer_service button,
.goods_detail_wrapper .bottom_nav_bar .share button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.goods_detail_wrapper .bottom_nav_bar .add_cart,
.goods_detail_wrapper .bottom_nav_bar .immediately_purchase {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  height: inherit;
  color: #fff;
  font-size: 24rpx;
  background: transparent;
}
.goods_detail_wrapper .bottom_nav_bar .add_cart {
  background: #ffa300;
}
.goods_detail_wrapper .bottom_nav_bar .immediately_purchase {
  background: var(--themeColor);
}

