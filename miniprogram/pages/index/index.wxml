<view class="page_container">
  <!-- 搜索框 开始 -->
  <SearchInput />
  <!-- 搜索框 结束 -->
  <!-- 轮播图 开始 -->
  <view class="index_swiper">
    <swiper indicator-dots autoplay circular>
      <block wx:for="{{swiperData}}" wx:key="goods_id">
        <swiper-item>
          <navigator url="{{item.navigator_url}}" open-type="navigate">
            <image src="{{item.image_src}}" mode="widthFix" />
          </navigator>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 轮播图 结束 -->
  <!-- 导航 开始 -->
  <view class="index_nav">
    <block wx:for="{{navList}}" wx:key="name">
      <navigator>
        <image src="{{item.image_src}}" mode="widthFix" />
      </navigator>
    </block>
  </view>
  <!-- 导航 结束 -->
  <!-- 楼层 开始 -->
  <view class="index_floor">
    <view class="floor_group"
      wx:for="{{floorList}}"
      wx:key="name"
      wx:for-item="item1"
      wx:for-index="index1"
    >
      <!-- 标题 -->
      <view class="floor_title">
        <image src="{{item1.floor_title.image_src}}"
               mode="widthFix" />
      </view>
      <!-- 内容 -->
      <view class="floor_list clearfix">
        <navigator class="list_item"
          wx:for="{{item1.product_list}}"
          wx:for-item="item2"
          wx:for-index="index2"
          wx:key="name"
          url="{{item2.navigator_url}}"
          open-type="{{item2.open_type}}"
        >
          <image src="{{item2.image_src}}"
            mode="{{index2 == 0 ? 'widthFix' : 'scaleToFill'}}" />
        </navigator>
      </view>
    </view>
  </view>
  <!-- 楼层 结束 -->
</view>